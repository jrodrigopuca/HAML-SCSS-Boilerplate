/ Boilerplate HAML/SCSS v0.22

-# Basic information
-@autor="jarp"
-@lang= "en"
-@title= "Hello World!"
-@description= "My awesome website"
-@keywords="keyword1, keyword2, keywordn"

-# Basic libraries
-@BootstrapV= "4.0.0-alpha.6"
-@TetherV="1.4.0"
-@NormalizeV="5.0.0"
-@jQueryV="3.1.1"
-@FontAwesomeV="4.7.0"


!!!5
%html
    %head{class:"no-js",lang:@lang}

        /Metadata
        %meta{charset:"utf-8"}
        %meta{'http-equiv':"x-ua-compatible", content:"ie-edge"}
        %title= @title
        %meta{name:"description", content:@description}
        %meta{name:"keywords", content:@keywords}
        %meta{name:"author", content:@autor}
        %meta{name:"viewport", content:"width=device-width, initial-scale=1, shrink-to-fit=no"}

        /Styles
        %link{rel:"stylesheet",href:"https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/"+@BootstrapV+"/css/bootstrap.min.css"}
        %link{rel:"stylesheet", href:"https://cdnjs.cloudflare.com/ajax/libs/normalize/"+@NormalizeV+"/normalize.min.css"}
        %link{rel:"stylesheet", href:"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/"+@FontAwesomeV+"/css/font-awesome.min.css"}
        %link{rel:"stylesheet",href:"./css/styles.css"}

    %body
        /NavBar
        %nav
            = Haml::Engine.new(File.read("./src/layouts/navbar.haml")).render

        /Header
        %header
            = Haml::Engine.new(File.read("./src/layouts/header.haml")).render

        /Main
        %main
            -# Please replace this wi th your own sections (this is just an example)
            = Haml::Engine.new(File.read("./src/layouts/section.haml")).render

        /Footer
        %footer.w-100
            = Haml::Engine.new(File.read("./src/layouts/social.haml")).render
            = Haml::Engine.new(File.read("./src/layouts/footer-links.haml")).render
            %p.text-center=@title+" - Develop by "+@autor

        /Scripts
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/jquery/"+@jQueryV+"/jquery.js"}
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/tether/"+@TetherV+"/js/tether.min.js"}
        %script{src:"https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/"+@BootstrapV+"/js/bootstrap.min.js"}
        /%script{src:"js/analytics.js"}
        /%script{async:"true", src:"'https://www.google-analytics.com/analytics.js"}
        %script{src:"./js/main.js"}
